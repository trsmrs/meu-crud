<!DOCTYPE html>
<html lang="pt-br">
<%- include('partials/head.ejs')%>
<body>
    <%- include('partials/navbar.ejs')%>
    <h1><%= title %></h1>

    <% if(typeof message !== 'undefined') {%>
            <%= message %>
        <% } %>

    <form action="/edit/<%= user._id %>" method="POST">
        <div>
            <label>Nome:</label>
            <input type="text" name="name" placeholder="Digite o seu nome" value=<%= user.name %>>
        </div>
        <div>
            <label>Idade:</label>
            <input type="text" name="age" placeholder="Digite a sua idade" value=<%= user.age %>>
        </div>
        <div>
            <label>E-mail:</label>
            <input type="email" name="email" placeholder="Digite o seu E-mail" value=<%= user.email %>>
        </div>
        <input type="submit" value="Enviar">
    </form>

    <%- include('partials/footer.ejs')%>
</body>
</html>